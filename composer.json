{
	"name": "rkr/forms",
	"description": "",
	"license": "MIT",
	"type": "library",
	"authors": [{
		"name": "ron",
		"email": "ron.kirschler@gmail.com"
	}],
    "require": {
        "php": ">= 7.4",
        "ext-json": "*",
		"ext-mbstring": "*",
		"ext-bcmath": "*"
	},
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^0.12.11"
    },
    "autoload": {
        "psr-4": {
            "Forms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forms\\": "tests/"
        }
    },
	"scripts": {
		"phpstan": [
			"phpstan analyse --level 4 src"
		],
		"phpunit": [
			"phpunit -c tests.xml"
		]
	}
}
